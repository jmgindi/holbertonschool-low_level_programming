#include "holberton.h"
#include <stdlib.h>

/**
 * alloc_grid - creates a 2d array of integers
 * @width: width
 * @height: height
 *
 * Return: pointer to array, or NULL on failure
 */

int **alloc_grid(int width, int height)
{
	int w, h;
	int **arr;

	if (width <= 0 || height <= 0)
		return (NULL);

	arr = (int **)(malloc(height * sizeof(int *)));

	if (arr == NULL)
		return (NULL);

	for (h = 0; h < height; h++)
	{
		arr[h] = (int *)(malloc(width * sizeof(int *)));

		if (arr[h] == NULL)
		{
			for (w = 0; w < h; w++)
				free(arr[w]);
			free(arr);
			return (NULL);
		}

		for (w = 0; w < width; w++)
			arr[h][w] = 0;
	}

	return (arr);
}
